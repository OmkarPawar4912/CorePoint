@model CorePoint.DAL.Models.Incident
<!-----------------

Incident

-->
@{
    ViewData["Title"] = "Edit";
}
<form asp-action="Create">
    <div class="pagetitle">
        <div class="card">
            <div class="card-body-head">
                <div class="float-left">
                    <h5 class="card-title">Create Incident</h5>
                </div>
                <div class="float-right">
                </div>
            </div>
        </div>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body m-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-2">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="EmailId" class="control-label"></label>
                                        <input asp-for="EmailId" class="form-control" />
                                        <span asp-validation-for="EmailId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SupervisorUserName" class="control-label"></label>
                                        <input asp-for="SupervisorUserName" class="form-control" />
                                        <span asp-validation-for="SupervisorUserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Shift" class="control-label"></label>
                                        <select asp-for="Shift" class="form-control"></select>
                                        <span asp-validation-for="Shift" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="IncidentType" class="control-label"></label>
                                        <input asp-for="IncidentType" class="form-control" />
                                        <span asp-validation-for="IncidentType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Area" class="control-label"></label>
                                        <input asp-for="Area" class="form-control" />
                                        <span asp-validation-for="Area" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label"></label>
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="FilePath" class="control-label"></label>
                                        <input asp-for="FilePath" class="form-control" />
                                        <span asp-validation-for="FilePath" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Severity" class="control-label"></label>
                                        <select asp-for="Severity" class="form-control"></select>
                                        <span asp-validation-for="Severity" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="IncidentDate" class="control-label"></label>
                                        <input asp-for="IncidentDate" class="form-control" />
                                        <span asp-validation-for="IncidentDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
