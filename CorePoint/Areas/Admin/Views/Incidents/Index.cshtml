@model IEnumerable<CorePoint.Service.ViewModel.ViewModelIncidentStatus>
<div class="pagetitle">
    <div class="card">
        <div class="card-body-head">
            <div class="float-left">
                <h5 class="card-title">Incident List</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="float-right">
                <a asp-action="Create" class="btn btn-primary">Create Incident</a>
            </div>
        </div>
    </div>
</div>

<section class="section">
    <div class="col-xl-12">
        <div class="card p-4">
            <form asp-action="Index" method="post">
            <div class="row gy-4">
                    <div class="col-md-3">
                        <label class="col-form-label">Enter Employee/Supervisor Name </label>
                        <input type="text" name="name" class="form-control" placeholder="Employee/Supervisor Name">
                    </div>

                    <div class="col-md-3">
                        <label class="col-form-label"> Incident From Date </label>
                        <input type="date" class="form-control" name="FromDate">
                    </div>

                    <div class="col-md-3">
                        <label class="col-form-label"> Incident To Date </label>
                        <input type="date" class="form-control" name="ToDate">
                    </div>

                    <div class="col-md-3 text-center mt-5 pt-2">
                        <input type="submit" class="btn btn-primary" value="Search"> &nbsp;&nbsp;
                        <a class="btn btn-secondary" asp-action="Index">Reset</a>
                    </div>
                
            </div>
            </form>
        </div>

    </div>
</section>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body-table">
                    <table class="table table-striped table-responsive datatable">
                        <thead>
                            <tr>
                                <th>
                                    Action
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmLateststatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmIncidentType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmEmployeeName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmSupervisorName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmServertiy)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmIncidentDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vmIncidentReportDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        <a asp-action="Edit" asp-area="Admin" asp-controller="Incidents" asp-route-id="@item.vmId"><i class="bi bi-pencil-fill"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.vmId })" onclick="return confirm ('Are you sure want to delete ?');"><i class="bi bi-trash-fill"></i></a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmLateststatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmIncidentType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmEmployeeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmSupervisorName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmServertiy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmIncidentDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => @item.vmIncidentReportDate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>