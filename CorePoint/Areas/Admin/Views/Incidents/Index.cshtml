@model IEnumerable<CorePoint.DAL.Models.Incident>
<div class="pagetitle">
    <div class="card">
        <div class="card-body-head">
            <div class="float-left">
                <h5 class="card-title">Incident List</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="float-right">
                <a asp-action="Create" class="btn btn-primary">Create Incident</a>
            </div>
        </div>
    </div>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body-table">
                    <table class="table table-striped table-responsive datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SupervisorUserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Shift)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IncidentType)                               
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Severity)
                                </th>
                               <th>
                                    @Html.DisplayNameFor(model => model.IncidentDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.SupervisorUserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Shift)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.IncidentType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.Severity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.IncidentDate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
