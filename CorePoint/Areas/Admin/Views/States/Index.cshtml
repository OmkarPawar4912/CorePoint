@model IEnumerable<CorePoint.Service.ViewModel.ViewModelState>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    
    <a asp-action="Create" asp-area="Admin" asp-controller="Countries" class="btn btn-info">Country List</a>
    <a asp-action="Create" class="btn btn-info">Create New State</a>
    <a asp-action="Index" asp-area="Admin" asp-controller="Cities" class="btn btn-info">City List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
              <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-success">
                                            <i class="bi bi-pencil-square"></i>
                                        </a> |
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm ('Are you sure want to delete ?');">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
