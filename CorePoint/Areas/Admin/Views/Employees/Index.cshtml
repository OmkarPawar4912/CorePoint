@model IEnumerable<CorePoint.Service.ViewModel.ViewModelEmployee>
    <div class="pagetitle">
        <div class="card">
            <div class="card-body-head">
                <div class="float-left">
                    <h5 class="card-title">Employee List</h5>
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="float-right">
                    <a asp-action="Create" class="btn btn-primary">Create Employee</a>
                </div>
            </div>
        </div>
    </div>


<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-responsive datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CrewName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsSupervisior)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HireDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CrewName)
                                    </td>
                                    <td>
                                        @if (item.IsSupervisior == true)
                                        {
                                            @:Yes
                                        }
                                        else
                                        {
                                            @:No
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HireDate)
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            @:Active
                                        }
                                        else
                                        {
                                            @:In Active
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm ('Are you sure want to delete ?');">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</section>
